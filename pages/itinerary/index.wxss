.container {
    padding: 30rpx;
  }
  
  .header {
    font-size: 50rpx;
    font-weight: bold;
    text-align: center;
    margin-top: 80rpx;
    color: cadetblue;
  }
  
  .itinerary-list {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  
  .itinerary-item {
    padding: 30rpx;
    background-color: #f8f8f8;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    gap: 15rpx;
  }
  
  .itinerary-item .description {
    font-size: 28rpx;
    color: #666;
  }
  
  .back-button {
    margin-top: 50rpx;
    background-color: #8cbef3;
    color: rgb(29, 48, 110);
    border-radius: 5rpx;
  }