<view class="container">
  <!-- 地图组件，设置为全屏显示 -->
  <map
    longitude="{{longitude}}"
    latitude="{{latitude}}"
    scale="16"
    show-location
    style="width: 100%; height: 100vh;"
  />
  
  <!-- 侧边栏 -->
  <view class="sidebar">
    <button class="sidebar-button" bindtap="chooseItinerary">行程选择</button>
    <button class="sidebar-button" bindtap="startVRGuide">VR导览</button>
  </view>

  <!-- 返回首页按钮 -->
  <button class="back-button" bindtap="goBackHome">返回首页</button>
</view>
