/* 页面容器 */
.container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
  }
  
  /* 侧边栏样式 */
  .sidebar {
    position: fixed;
    top: 80rpx;
    bottom: 0;
    left: 0;
    width: 150rpx;
    display: flex;
    flex-direction: column;
    gap: 20rpx;
    padding-top: 30rpx;
  }
  
  /* 侧边栏按钮样式 */
  .sidebar-button {
    background-color: #22861598;
    color: rgb(157, 245, 139);
    padding: 20rpx;
    margin-top: 30rpx;
    width:150rpx !important;
    font-size: 30rpx;
    cursor: pointer;
    border-radius: 5rpx;
    transition: background-color 0.3s ease;
  }
  
  /* 悬停按钮时的效果 */
  .sidebar-button:hover {
    background-color: #2980b9;
  }
  
  /* 返回按钮样式 */
  .back-button {
    position: fixed;
    bottom: 40rpx;
    left: 20rpx;
    padding: 20rpx 20rpx;
    width: 120rpx !important;
    background-color: #8cbef3;
    color: rgb(29, 48, 110);
    border-radius: 5rpx;
  }