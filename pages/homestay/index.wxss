/* 商城整体容器：设置为弹性布局，自动换行，设置整体内边距和卡片间距 */
.shop-container {
  display: flex;
  flex-wrap: wrap;       /* 自动换行 */
  padding: 20rpx;
  gap: 30rpx;             /* 卡片间距 */
  justify-content: space-between; /* 让卡片两侧分布更均匀 */
}

/* 商品卡片样式 */
.product-card {
  width: 48%;             /* 两个卡片一行，留出间距 */
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(32, 145, 75, 0.384); /* 阴影效果 */
}

/* 商品图片 */
.product-img {
  width: 100%;
  height: 200rpx;
  border-bottom: 1rpx solid rgb(33, 160, 101);   
  object-fit: cover;
}

/* 商品信息区域 */
.product-info {
  padding: 20rpx 16rpx;  /* 加大内边距提升阅读体验 */
}

/* 商品标题文字 */
.product-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;  /* 增加标题与价格之间的距离 */
  font-weight: 500;
}

/* 商品价格文字 */
.product-price {
  font-size: 26rpx;
  color: #e64340;  
  font-weight: bold;
}
/* 搜索栏样式 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* 搜索输入框样式 */
.search-input {
  flex: 1;  /* 输入框自动填充剩余的空间 */
  height: 60rpx;
  padding: 0 10rpx;
  font-size: 25rpx;
  border: 1px solid #ccc;
  border-radius: 20rpx;
  margin-right: 10rpx;  /* 使输入框和按钮之间有间距 */
}

/* 搜索按钮样式 */
.search-button {
  width: 150rpx !important;  /* 设置按钮宽度为更小的值 */
  height: 35rpx;
  background-color: rgb(71, 143, 86);
  color: white;
  border-radius: 20rpx;
  font-size: 25rpx;
  text-align: center;  /* 使文字居中对齐 */
  line-height: 60rpx;  /* 垂直居中 */
}


/* 筛选栏样式 */
.filter-bar {
  display: flex;
  justify-content: space-around;
  padding: 10rpx 0;
  background-color: #f8f8f8;
}

.filter-item {
  padding: 10rpx 20rpx;
  background-color: rgb(97, 201, 119);
  border-radius: 5rpx;
  font-size: 25rpx;
  color: #5e5b5b;
  cursor: pointer;
  box-shadow: 0 2px 5px rgba(207, 58, 58, 0.1);
  transition: background-color 0.3s ease;
}
.header {
  margin-top: 10rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #22543d;
  text-align: center;
}

/* 点击按钮时的高亮效果 */
.filter-item:hover {
  background-color: #62c59f;
  color: white;
}
