.container {
    padding: 34rpx;
  }
  
  .header {
    margin-top: 170rpx;
    font-size: 90rpx;
    font-weight: bold;
    color: #e2d391;
    text-align: center;
    background-color: #55470a71;
  }
  
  .grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 600rpx;
    margin: 0 auto;
    margin-top: 150rpx;
  }
  
  .card {
    background-color: #fcfcfc8e;
    padding: 20rpx;
    border-radius: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 26%;
    height: 100%;
    margin-top: 20rpx;
    color: #553f0e;
    box-shadow: 0 4rpx 8rpx rgba(140, 141, 58, 0.7);
    text-align: center;
  }
  
  .icon {
    font-size: 48rpx;
    margin-bottom: 30rpx;
  }
  
  .list {
    color: #553f0e;
    font-size: 50rpx;
  }
  
  .section {
    background-color: #ca99506e;
    padding: 20rpx;
    width: 600rpx;
    margin-top: 150rpx;
    margin-left: 20rpx;
    border-radius: 27rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  
  .section-title {
    font-size: 30rpx;
    color: #5c4411;
    margin-bottom: 16rpx;
    font-style: initial;
  }
  
  .list text {
    display: block;
    font-size: 25rpx;
    color: #553f0e;
    margin-bottom: 10rpx;
  }
  
  .footer {
    font-size: 30rpx;
    text-align: center;
    color: rgb(107, 87, 21);
    margin-top: 250rpx;
  }
  
  .background-wrapper {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }
  
  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
  
  /* 主要结构布局保持不变，以下是关键新增与修正部分 */

.doubao-area {
    position: fixed;
    top: 1000rpx;
    left: 550rpx;
    width: 10vw;
    height: 10vh;
    z-index: 999;
    pointer-events: auto;
  }
  
  .doubao-box {
    width: 150rpx;
    height: 150rpx;
  }
  
  .doubao-img {
    width: 125rpx;
    height: 125rpx;
    border-radius: 50%;
    box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  }
  